#include<iostream>
using namespace std;
int main()
{
    int n,k,countv=0;;
    cin>>n>>k;
    int arr[n];
    k=k-1;
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }

    for(int i=0;i<n;i++)
    {
         if(arr[i]>= arr[k] && arr[i]>0)
            countv++;
    }

    cout<<countv;
    return 0;

}
